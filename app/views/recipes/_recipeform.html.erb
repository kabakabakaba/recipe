<%= form_with model: @recipe, local: true do |f| %>
	<div class="row">
    <div class="mb-3">
      <%= f.label :name, '料理名', class: 'form-label'  %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="mb-3">
      <%= f.label :text, '作り方', class: 'form-label'  %>
      <%= f.text_area :text, class: 'form-control', rows: 10 %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="d-grid gap-2 col-4 mx-auto">
      <%= link_to "戻る", :back, class: 'btn btn-secondary' %>
    </div>
    <div class="d-grid gap-2 col-4 mx-auto">
      <%= f.submit "登録", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
